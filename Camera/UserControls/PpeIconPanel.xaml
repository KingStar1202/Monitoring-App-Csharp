              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
              xmlns:local="clr-namespace:Camera.UserControls"
             Width="58" 
             Height="58" 
             >
    <telerik:RadButton   x:Name="ppeButton" Click="ppeButton_Click"  HorizontalAlignment="Stretch" Margin="2,2,2,2"    Grid.Column="2"   Grid.Row="1" Background="{x:Null}"   >
        <Image Source="/resources/ppe_icons/no-entry.png" x:Name="ppeImage" />
    </telerik:RadButton>
</telerik:RadTransitionControl>
